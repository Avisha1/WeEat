  <div class="field">
    <%= form.label :accept_10_bis %>
    <%= form.check_box :accept_10_bis, id: :restaurant_accept_10_bis %>
  </div>

  <div class="field">
    <%= form.label :address %>
    <%= form.text_field :address, id: :restaurant_address %>
  </div>

  <div class="field">
    <%= form.label :max_delivery_time %>
    <%= form.text_field :max_delivery_time, id: :restaurant_max_delivery_time %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
