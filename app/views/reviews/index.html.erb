<p id="notice"><%= notice %></p>

<h1>Reviews</h1>

<table>
  <thead>
    <tr>
      <th>Rating</th>
      <th>Comment</th>
      <th>Date</th>
      <th>Restaurant</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reviews.each do |review| %>
      <tr>
        <td><%= review.rating %></td>
        <td><%= review.comment %></td>
        <td><%= review.date %></td>
        <td><%= review.restaurant_id %></td>
        <td><%= link_to 'Show', [review.restaurant, review] %></td>
        <td><%= link_to 'Edit', edit_restaurant_review_path(review.restaurant, review) %></td>
        <td><%= link_to 'Destroy', [review.restaurant, review], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Review', new_restaurant_review_path %>
